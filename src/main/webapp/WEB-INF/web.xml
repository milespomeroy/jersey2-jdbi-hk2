<?xml version="1.0" encoding="UTF-8"?>

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	
	<listener>
		<listener-class>com.milespomeroy.jersey2jdbi2hk2.Init</listener-class>
	</listener>

    <listener>
        <listener-class>com.milespomeroy.jersey2jdbi2hk2.GuiceConfig</listener-class>
    </listener>

	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.milespomeroy.jersey2jdbi2hk2.App</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
</web-app>
